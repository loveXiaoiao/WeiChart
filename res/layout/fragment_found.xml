<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d6d6"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:background="#222222"
        android:layout_height="48dp" 
        android:layout_marginBottom="15dp">
        <TextView 
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="微信"
            android:textColor="#ffffff"
            android:id="@+id/textViewf1"/>
        <TextView 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="38sp"
            android:gravity="center"
            android:text="+"
            android:textColor="#ffffff"
            android:id="@+id/textViewf2"/>
        
        <ImageView 
            android:layout_toLeftOf="@id/textViewf2"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_search_holo_dark"/>
        
    </RelativeLayout>
    
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="15dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/friend_circle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef1"
            android:textSize="15sp"
            android:text="朋友圈"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
        <ImageView 
            android:layout_alignParentRight="true"
            android:src="@drawable/girl"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imagef2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="1dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/saoyisao"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef3"
            android:textSize="15sp"
            android:text="扫一扫"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="15dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/yaoyiyao"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef4"
            android:textSize="15sp"
            android:text="摇一摇"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>
    
    
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="1dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/nearpeople"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef5"
            android:textSize="15sp"
            android:text="附近的人"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="15dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/bottle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef6"
            android:textSize="15sp"
            android:text="漂流瓶"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>
    
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="1dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/shopping"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef7"
            android:textSize="15sp"
            android:text="购物"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>
    <RelativeLayout  android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="40dp" 
        android:layout_marginBottom="15dp"
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:src="@drawable/game"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imagef8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:layout_toRightOf="@+id/imagef8"
            android:textSize="15sp"
            android:text="游戏"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>
    

</LinearLayout>